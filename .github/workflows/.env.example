# Database Configuration
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/job_changes

# Scraping Configuration
# Maximum number of results to fetch per company
MAX_RESULTS_PER_COMPANY=50

# Delay between requests in seconds (to avoid rate limiting)
SCRAPING_DELAY=2

# List of companies to track (comma-separated)
COMPANIES_TO_TRACK=TCS,Infosys,Wipro,HCL,Tech Mahindra,Accenture,IBM,Microsoft,Google,Amazon

# Chrome WebDriver Configuration
# Set to true to run Chrome in headless mode
CHROME_HEADLESS=true

# Set to true to disable GPU acceleration
CHROME_DISABLE_GPU=true

# Set to true to disable sandbox
CHROME_DISABLE_SANDBOX=true

# Set to true to disable dev-shm-usage
CHROME_DISABLE_DEV_SHM=true

# Application Configuration
# Set to true to enable debug mode
DEBUG=false

# Set the log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Set the timezone for the application
TIMEZONE=UTC

# API Configuration (if needed)
# API base URL
API_BASE_URL=http://localhost:8000

# API key for authentication (if needed)
API_KEY=your_api_key_here

# Security Configuration
# Secret key for session management
SECRET_KEY=your_secret_key_here

# Set to true to enable authentication
ENABLE_AUTH=false

# Email Configuration (for notifications)
# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_TO_EMAIL=notifications@yourdomain.com

# GitHub Configuration (for GitHub Actions)
# GitHub token for API access
GITHUB_TOKEN=your_github_token_here

# Repository information
GITHUB_REPOSITORY=yourusername/ai-job-change-tracker
GITHUB_BRANCH=main
